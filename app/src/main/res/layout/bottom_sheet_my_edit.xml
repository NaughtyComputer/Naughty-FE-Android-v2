<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/titleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 이미지"
        android:textColor="@color/T300"
        style="@style/t1_sb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/creditBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEdit">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/creditBlueBox"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_p300_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CreditBlue"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_credit_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/creditYellowBox"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_p300_60"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/creditBlueBox"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CreditYellow"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_credit_yellow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/creditRedBox"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_p300_60"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/creditBlueBox"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CreditRed"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_credit_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creditBox1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/creditBlackBox"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_p300_60"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/glMiddle"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CreditBlack"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_credit_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/creditGreenBox"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_p300_60"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/glMiddle"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CreditGreen"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_credit_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
