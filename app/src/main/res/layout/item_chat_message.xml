<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tvUserMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et_ai_active"
        android:padding="12dp"
        android:textColor="@color/T300"
        style="@style/b1_sb"
        android:visibility="gone"
        android:layout_marginStart="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aiMessageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAiIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tuzamate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변"
            android:textColor="@color/T300"
            style="@style/b3_sb"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/ivAiIcon"
            app:layout_constraintTop_toTopOf="@+id/ivAiIcon"
            app:layout_constraintBottom_toBottomOf="@+id/ivAiIcon" />

        <TextView
            android:id="@+id/tvAiMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_w300_8"
            android:padding="12dp"
            android:textColor="@color/P300"
            style="@style/b1_sb"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAiIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>